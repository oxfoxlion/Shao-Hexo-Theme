<%- partial('_partial/head') %>  <body>
  
  <%- partial('_partial/header') %> <main class="main-content">
    <div class="container">
      <h2>最新文章</h2>

      <% page.posts.each(function(post){ %>
        <article class="post-card">
          <h3><a href="<%- url_for(post.path) %>"><%= post.title %></a></h3>
          <p class="post-meta">
            <time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'YYYY-MM-DD') %></time>
          </p>
          <%- post.excerpt || post.content.substring(0, 200) + '...' %>
          <a href="<%- url_for(post.path) %>" class="read-more">閱讀全文 &raquo;</a>
        </article>
      <% }); %>

      </div>
  </main>

  <%- partial('_partial/footer') %> </body>
</html>