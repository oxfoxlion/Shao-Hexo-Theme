<%- partial('_partial/head') %>

<body>
  <%- partial('_partial/header') %> 

  <main class="main-content">
    <div class="container">
      
      <h2>最新文章</h2>

      <% page.posts.each(function(post){ %>
        <article class="post-card">
          <h3><a href="<%- url_for(post.path) %>"><%= post.title %></a></h3>

          <p class="post-meta">
            <time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'YYYY-MM-DD HH:mm') %></time>
            <% if (post.tags && post.tags.length){ %>
              | Tags:
              <% post.tags.each(function(tag){ %>
                <a href="<%- url_for(tag.path) %>" class="post-tag"><%= tag.name %></a>
              <% }); %>
            <% } %>
          </p>

          <div class="post-summary">
            <% if (post.excerpt) { %>
              <%- post.excerpt %>
            <% } else { %>
              <%- post.content.substring(0, 200) + '...' %>
            <% } %>
          </div>

          <% if (post.excerpt || post.more) { %>
            <a href="<%- url_for(post.path) %>" class="read-more">閱讀全文 &raquo;</a>
          <% } %>
        </article>
      <% }); %>

      <%- partial('_partial/pagination') %> 

    </div>
  </main>

  <%- partial('_partial/footer') %> 
</body>
</html>